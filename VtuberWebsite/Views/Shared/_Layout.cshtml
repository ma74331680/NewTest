<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/layout.css" rel="stylesheet" />
</head>

<header>
    <h1>@ViewBag.Title</h1>
</header>

<a class="news-too" href="@Url.Action("News", "News")">最新消息</a>

<body>
    <nav class="gMenu">
        <!-- 包裹人像圖示和下拉選單的容器，並設置類名以便定位 -->
        <div class="header-right dropdown">
            <a class="bi bi-person-circle dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 32px; color: #09ef55; text-decoration: none;"></a>
            <!-- 下拉選單內容 -->
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" href="註冊頁面.html">註冊帳號</a></li>
                <li><a class="dropdown-item" href="登入頁面.html">登入帳號</a></li>
            </ul>
        </div>
        <!-- Existing menu button and navigation links -->
        <input class="menu-btn" type="checkbox" id="menu-btn">
        <label class="menu-icon" for="menu-btn">
            <span class="navicon"></span>
        </label>
        <ul class="menu">
            <li><a class="menu-item" href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a class="menu-item" href="@Url.Action("Gallery", "Gallery")">作品列表</a></li>
            <li><a class="menu-item" href="@Url.Action("Favorite", "User")">我的最愛</a></li>
            <li><a class="menu-item" href="@Url.Action("About", "Home")">關於我們</a></li>
        </ul>
    </nav>


    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

